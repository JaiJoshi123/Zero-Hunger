<% layout('layouts/dashboard')%>
<!-------------------------------------------START EDITING FROM HERE------->
                    <div class="pcoded-content">
                        <!-- Page-header start -->
                        <div class="page-header">
                            <div class="page-block">
                                <div class="row align-items-center">
                                    <div class="col-md-8">
                                        <div class="page-header-title">
                                            <h4 class="m-b-10">New Request</h4>
                                            <p class="m-b-0"><i>_Restaurant name_</i></p>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <ul class="breadcrumb">
                                            <li class="breadcrumb-item">
                                                <a href="index.html"> <i class="fa fa-home"></i> </a>
                                            </li>
                                            <li class="breadcrumb-item"><a href="#!">New Request</a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <div class="pcoded-inner-content">
                        <div class="main-body">
                            <div class="page-wrapper">
                                <div class="page-body">
                            <div class="row">
                                <div class="col-xl-12">
                                    <div class="card">
                                        <div class="card-header">
                                         <div height="4.5rem" width="4.5rem" >
                                            <h4 >NGO Name</h4>
                                            <h5 class="text-muted m-b-0">Location</h5>
                                         </div>
                                        <p class="text-c-green m-l-10">Status: Accepting Donation</p>
                                        </div>
            
                                        <div class="card-block">
                                            <form class="form-material">
                                            <div class="card-text">
                                                <div class="card-block-small">
                                                    <h5 class="text-muted m-b-0">Approx. Number of People it must Feed</h5>
                                                    <input type="text" id="food" name="food" class="form-control">
                                                </div>
                                                <div class="card-block-small">
                                                    <h5 class="text-muted m-b-0">Age Group of People to be fed</h5>
                                                    <input type="text" id="age" name="age" class="form-control">
                                                </div>
                                                <div class="card-block-small">
                                                    <h5 class="text-muted m-b-0">Request Put Up At</h5>
                                                    <p class="text-muted m-b-0"><input autocomplete="on|off" type="datetime-local" class="form-control" id="date" name="date"></p>
                                                </div>  
                                                <div class="card-block-small">
                                                    <h5 class="text-muted m-b-0">Alternate Contact</h5>
                                                    <p class="text-muted m-b-0"><input class="form-control" type="tel" id="phone" name="phone" placeholder="+91-xxxxx-xxxxx" pattern="+91-[0-9]{5}-[0-9]{5}" required></p>
                                                </div>                                                
                                                
                                                <button class="btn btn-success waves-effect waves-light">Put Up Donation</button>
                                            </div>
                                        </form>
                                        </div>
                                    </div>
                                </div>

                                <!---row 2 over now-->
                            </div>
                        </div>
                </div>
            </div>
        </div>
    </div>
    