<% layout('layouts/dashboard')%>
                    <!-------------------------------------------START EDITING FROM HERE------->
                    <div class="pcoded-content">
                        <!-- Page-header start -->
                        <div class="page-header">
                            <div class="page-block">
                                <div class="row align-items-center">
                                    <div class="col-md-8">
                                        <div class="page-header-title">
                                            <h5 class="m-b-10">Current Donation</h5>
                                            <p class="m-b-0"><i><%=currentUser.resto.name%></i></p>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <ul class="breadcrumb">
                                            <li class="breadcrumb-item">
                                                <a href="index.html"> <i class="fa fa-home"></i> </a>
                                            </li>
                                            <li class="breadcrumb-item"><a href="#!">Current Donation</a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Page-header end -->
                        <% for(let d of donations) {%>
                        <% if(d.status !== "Donated") {%>
                        <div class="pcoded-inner-content">
                            <!-- Main-body start -->
                            <div class="main-body">
                                <div class="page-wrapper">
                                    <!-- Page-body start -->
                                    <div class="page-body">
                                        <div class="row">
                                            <div class="col-xl-12">
                                                <div class="card">
                                                    <div class="card-header">
                                                        <img src="<%=d.img.url%>" width="250" height="250">
                                                     <div height="4.5rem" width="4.5rem" >
                                                        <% if(d.ngo){%>
                                                        <h4 ><%=d.ngo.ngo.name%></h4>
                                                        <%}%>
                                                     </div>
                                                    <p class="text-c-red m-l-10"><%=d.status%></p>
                                                    </div>
                        
                                                    <div class="card-block">
                                                        <div class="card-text">
                                                            <div class="card-block-small">
                                                                <h5 class="text-muted m-b-0">Order Number</h5>
                                                                <p class="text-muted m-b-0"><%=d._id%></p>
                                                            </div>
                                                            <div class="card-block-small">
                                                                <h5 class="text-muted m-b-0">Items</h5>
                                                                <p class="text-muted m-b-0"><%=d.foodName%></p>
                                                            </div>
                                                            <div class="card-block-small">
                                                                <h5 class="text-muted m-b-0">Donation Placed At</h5>
                                                                <p class="text-muted m-b-0"><%=d.getUploadTime%></p>
                                                            </div>  
                                                            <div class="card-block-small">
                                                                <h5 class="text-muted m-b-0">Available till</h5>
                                                                <p class="text-muted m-b-0"><%=d.getAvailTime%></p>
                                                            </div>  
                                                            <% if(d.ngo){%>
                                                            <div class="card-block-small">
                                                                <h5 class="text-muted m-b-0">Will be Picked-up By</h5>
                                                                <p class="text-muted m-b-0"><%=d.spoc%></p>
                                                            </div>
                                                            <div class="card-block-small">
                                                                <h5 class="text-muted m-b-0">Phone Number</h5>
                                                                <p class="text-muted m-b-0"><%=d.spoc_no%></p>
                                                            </div>
                                                            <div  class="card-block-small">
                                                                <form action="/auth/getOtp/<%=d._id%>">
                                                                    <button class="btn btn-info">Generate OTP</button>
                                                                </form>
                                                                <form  class="d-flex justify-content-around mt-3" action="/auth/getOtp/<%=d._id%>" method="post">
                                                                    <input class="form-control" type="number" placeholder="Enter OTP" name="code">
                                                                    <button class="btn btn-success">Submit</button>
                                                                </form>
                                                            </div>
                                                            <%}%>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <!-----ending row here-->
                                        </div>
                                    </div>
                                    <!-- Page-body end -->
                                </div>
                                <div id="styleSelector"> </div>
                            </div>
                        </div>
                        <%}%>
                        <%}%>
                    </div>
                